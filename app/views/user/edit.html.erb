<div class="row">
  <div class="col-md-5">
    <%= simple_form_for @user, :html => {:class => "form-vertical"}, :defaults => {:wrapper_html => {:class => "form-group"}, :input_html => {:class => "form-control"}} do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :disabled => true %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
