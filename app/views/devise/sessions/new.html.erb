
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Sign in</h2>
      </div>

      <div class="panel-body">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-vertical"}, :defaults => {:wrapper_html => {:class => "form-group"}, :input_html => {:class => "form-control"}}) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, :required => false, :autofocus => true %>
            <%= f.input :password, :required => false %>
            <%= f.input :remember_me, :as => :boolean, :input_html => {:class => ""} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign in", :class => "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <div class='top-buffer'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

